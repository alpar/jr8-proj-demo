<!DOCTYPE html>
<html>
<head>
    #set($title = "贷款申请")
    #parse('/widget/header/header.vm')
    <link rel="stylesheet" href="./wddx-form-loan-apply.scss">
</head>
<body>
    
    
    <form class="ui-form">
        
        
        <input type="hidden" name="from" value="$!{from}">
        <input type="hidden" name="orderId" value="$!{orderId}">
        
        
        <fieldset>
            <legend>贷款信息</legend>
            <div class="form-group form-mark">
                <label>贷款金额</label>
                <div class="form-con">
                    <select name="money" class="form-input">
                        <option value="-1" disabled="true" selected="true">请选择</option>
                        <option value="1万">1万</option>
                        <option value="3万">3万</option>
                        <option value="5万">5万</option>
                        <option value="10万">10万</option>
                        <option value="15万">15万</option>
                        <option value="20万">20万</option>
                        <option value="50万">50万</option>
                        <option value="其它">其它</option>
                    </select>
                </div>
            </div>
            <div class="form-group form-mark">
                <label>贷款期限</label>
                <div class="form-con">
                    <select name="month" class="form-input">
                        <option value="-1" disabled="true" selected="true">请选择</option>
                        <option value="3月">3月</option>
                        <option value="6月">6月</option>
                        <option value="1年">1年</option>
                        <option value="2年">2年</option>
                        <option value="3年">3年</option>
                        <option value="5年">5年</option>
                        <option value="10年">10年</option>
                    </select>
                </div>
            </div>
            <div class="form-group form-mark">
                <label>贷款用途</label>
                <div class="form-con">
                    <select name="daikuanyt" class="form-input">
                        <option value="-1" disabled="true" selected="true">请选择</option>
                        <option value="买房">买房</option>
                        <option value="买车">买车</option>
                        <option value="生意周转">生意周转</option>
                        <option value="其它">其它</option>
                    </select>
                </div>
            </div>
        </fieldset>
        
        
        <fieldset>
            <legend>基本资料</legend>
            <div class="form-group">
                <label>真实姓名</label>
                <div class="form-con">
                    <input type="text" name="name" placeholder="请输入" class="form-input" maxlength="50">
                </div>
            </div>
            <div class="form-group">
                <label>手机号</label>
                <div class="form-con">
                    <input type="tel" name="phone" placeholder="请输入" class="form-input" value="$!{phone}" readonly="true">
                </div>
            </div>
            <div class="form-group form-mark">
                <label>所在城市</label>
                <div class="form-con">
                    <input type="hidden" name="applyCity">
                    <div class="form-input select-city-single">请选择</div>
                </div>
            </div>
            <div class="form-group">
                <label>出生年份</label>
                <div class="form-con">
                    <input type="number" name="chushengnian" placeholder="请输入" class="form-input" maxlength="4">
                </div>
            </div>
        </fieldset>
        
        
        <fieldset>
            <legend>资产信用</legend>
            <div class="form-group form-mark">
                <label>职业身份</label>
                <div class="form-con">
                    <select name="zhiye" class="form-input">
                        <option value="-1" disabled="true" selected="true">请选择</option>
                        <option value="上班族">上班族</option>
                        <option value="个人经营">个人经营</option>
                        <option value="自由职业者">自由职业者</option>
                    </select>
                </div>
            </div>
            <div class="form-group form-mark">
                <label>月收入</label>
                <div class="form-con">
                    <select name="yuexin" class="form-input">
                        <option value="-1" disabled="true" selected="true">请选择</option>
                        <option value="3000以下">3000以下</option>
                        <option value="3000-10000">3000-10000</option>
                        <option value="10000-20000">10000-20000</option>
                        <option value="20000以上">20000以上</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label>发薪方式</label>
                <div class="form-con">
                    <div class="form-cb-wrap">
                        <div class="form-cb-item">
                            <input type="radio" name="gongzixingshi" value="银行转账">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">银行转账</span>
                        </div>
                        <div class="form-cb-item">
                            <input type="radio" name="gongzixingshi" value="现金领取">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">现金领取</span>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        
        
        <fieldset>
            <legend class="empty-legend"></legend>
            <div class="form-group">
                <label>信用卡</label>
                <div class="form-con">
                    <div class="form-cb-wrap">
                        <div class="form-cb-item">
                            <input type="radio" name="xinyong" value="有">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">有</span>
                        </div>
                        <div class="form-cb-item">
                            <input type="radio" name="xinyong" value="无">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">无</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>车险或寿险</label>
                <div class="form-con">
                    <div class="form-cb-wrap">
                        <div class="form-cb-item">
                            <input type="radio" name="shangyexian" value="有">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">有</span>
                        </div>
                        <div class="form-cb-item">
                            <input type="radio" name="shangyexian" value="无">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">无</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>社保</label>
                <div class="form-con">
                    <div class="form-cb-wrap">
                        <div class="form-cb-item">
                            <input type="radio" name="shebao" value="有">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">有</span>
                        </div>
                        <div class="form-cb-item">
                            <input type="radio" name="shebao" value="无">
                            <span class="form-cb-item-icon"></span>
                            <span class="form-cb-item-label">无</span>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
            
    </form>
    
    
    
    <section class="ui-form-btmbtn">
        <div class="info-wrap"></div>
        <div class="btn-wrap">
            <a href="javascript:;" class="btn-submit disabled">立即提交</a>
        </div>
    </section>
    
    
    
    #parse('/widget/footer/footer.vm')
    ##------------------------------------
    ## scripts
    ##------------------------------------
    __FRAMEWORK_CONFIG__
    <script>
    require(['page/wddx-form-loan-apply/wddx-form-loan-apply'],function(app){
        app();
    });
    </script>
</body>
</html>